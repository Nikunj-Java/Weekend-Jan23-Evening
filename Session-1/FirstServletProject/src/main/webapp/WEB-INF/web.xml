<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>FirstServletProject</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  
  <!-- Configure for my servlet -->
  
  <servlet>
  	<servlet-name>first</servlet-name>
  	<servlet-class>com.simplilearn.demo.FirstServlet</servlet-class>
  </servlet>
  
  <servlet>
  		<servlet-name>second</servlet-name>
  		<servlet-class>com.simplilearn.demo.HelloServlet</servlet-class>
  	</servlet>
  
  
  <!-- Request will come here -->
  <servlet-mapping>
  	<servlet-name>first</servlet-name>
  	<url-pattern>/login</url-pattern>
  
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>second</servlet-name>
  	<url-pattern>/hello</url-pattern>
  	
  </servlet-mapping>
</web-app>